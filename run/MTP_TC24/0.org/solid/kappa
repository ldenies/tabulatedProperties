FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 345;

boundaryField
{
    adiabatic
    {
        type            fixedValue;
        value           uniform 345;
    }

    fluidContact
    {
        type            fixedValue;
        value           uniform 345;
    }

    middle
    {
        type            symmetryPlane;
    }

    hot
    {
        type            fixedValue;
        value           uniform 345;
    }

}

